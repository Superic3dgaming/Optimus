# Try multiple bases in order (first one that works will be used)
OPTIMUS_API_BASES=https://api.delta.exchange

# Explicit, stable paths (avoid /public/products which 404s)
OPTIMUS_API_PATH_CANDLES=/v3/public/candles
OPTIMUS_API_PATH_PRODUCTS=/v3/public/products

# Candles params
OPTIMUS_CANDLES_INTERVAL_PARAM=interval
OPTIMUS_CANDLES_SYMBOL_PARAM=product_id         # recommended (stable)

# Market
OPTIMUS_UNDERLYING=ETHUSD
OPTIMUS_OPTION_ROOT=ETH
OPTIMUS_OPTION_TYPE=both

# Required when using product_id for candles on the perp:
OPTIMUS_PERP_PRODUCT_ID=3136

# Auto-pick nearest-expiry ATM option (you donâ€™t need to set an option id)
OPTIMUS_AUTO_SELECT=1

# Make sure these overrides are NOT set (comment them if present)
# OPTIMUS_OPTION_PRODUCT_ID=...
# OPTIMUS_OPTION_SYMBOL=...

OPTIMUS_API_BASES=https://<your-working-delta-api-base>
OPTIMUS_API_PATH_PRODUCTS=/v3/public/products
OPTIMUS_API_PATH_CANDLES=/v3/public/candles

